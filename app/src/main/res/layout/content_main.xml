<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:text="Last Subscribe data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Publish data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="data"
        android:ems="10"
        android:id="@+id/editTextPublishData"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/buttonPublish"
        android:layout_alignStart="@+id/buttonPublish" />

    <Button
        android:text="Publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPublish"
        style="@android:style/Widget.DeviceDefault.Button.Small"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/editTextPublishData"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="                                          "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSubscribeData"
        android:textSize="18sp"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="13dp"
        android:layout_alignRight="@+id/editTextPublishData"
        android:layout_alignEnd="@+id/editTextPublishData"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/textViewRssi" />

    <TextView
        android:text="___________________________________________"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:textColor="?android:attr/textColorPrimary"
        android:textAlignment="center"
        android:layout_below="@+id/textViewSubscribeData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewRssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textViewSubscribeData"
        android:textAlignment="center"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textLSDtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewSubscribeData"
        android:layout_alignEnd="@+id/textViewSubscribeData"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView2"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="18sp" />
</RelativeLayout>
